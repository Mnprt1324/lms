{
    "version": 2,
    "builds":[
      {
        "src":"server.js",
        "use":"@vercel/node"
      },
      {
        "src":"src/**/**",
        "use":"@vercel/static"
      }

    ],
    "rewrites": [
        {
            "source": "/(.*)",
            "destination": "/"
        }
    ]
}

 "version": 2,
 "builds": [
  {
   "src": "server.js",
   "use": "@vercel/node",
   "config": { "includeFiles": ["dist/**"] }
  }
 ],
 "routes": [
  {
   "src": "/(.*)",
   "dest": "server.js"
  }
 ]
}

